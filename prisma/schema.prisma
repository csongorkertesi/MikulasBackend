generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/mikulas"
}

enum Material {
  wood
  metal
  plastic
  other
}

model Toys {
  id       Int       @id @default(autoincrement())
  name     String
  material Material
  weight   Int
  child    Children? @relation(fields: [childId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  childId  Int?
}

model Children {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  address String
  good    Boolean @default(true)
  toys    Toys[]
}
